@model Quizz.Models.STUDENT

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sregister</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @if (ViewBag.msg != null)
            {
                <div class="alert alert-Danger">
                    <strong>Error!</strong> @ViewBag.msg
                </div>
            }
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8  col-sm-8">

                <h2>Student Register</h2>
                @using (@Html.BeginForm("sregister", "Home", FormMethod.Post, new {enctype="multipart/form-data"}))
                {
                    <div class="form-group">
                        <label for="email">Username:</label>

                        @Html.TextBoxFor(x => x.S_NAME, htmlAttributes: new { @class = "form-control" })
                        @*<input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        @Html.PasswordFor(x => x.S_PASSWORD, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="pwd">Image:</label>

                        <input type="file" class="form-control" id="imgfile"name="imgfile"/>
                    </div>

                    <input type="submit" value="Register Now" class="btn btn-warning btn-block"/>
                }

            </div>
            <div class="col-lg-4 col-md-4  col-sm-4">
            </div>
        </div>
       
</body>
</html>
